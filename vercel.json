{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "blog/**/*", "use": "@vercel/static" },
    { "src": "*.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/blog/(.*)", "dest": "/blog/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
